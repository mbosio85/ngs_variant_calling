/*
 * -------------------------------------------------
 *  Nextflow config file for reference genome
 * -------------------------------------------------
 * Defines reference genomes, without using iGenome paths
 * Can be used by any config that customises the base
 * path using $params.genomes_base / --genomes_base
 */

params {
  genomes {
    'GRCh37' {
      acLoci                 = "${params.genomes_base}/GATK/GRCh37/Annotation/ASCAT/1000G_phase3_20130502_SNP_maf0.3.loci"
      acLociGC               = "${params.genomes_base}/GATK/GRCh37/Annotation/ASCAT/1000G_phase3_20130502_SNP_maf0.3.loci.gc"
      bwaIndex               = "${params.genomes_base}/GATK/GRCh37/Sequence/BWAIndex/human_g1k_v37_decoy.fasta.{amb,ann,bwt,pac,sa}"
      chrDir                 = "${params.genomes_base}/GATK/GRCh37/Sequence/Chromosomes"
      chrLength              = "${params.genomes_base}/GATK/GRCh37/Sequence/Length/human_g1k_v37_decoy.len"
      dbsnp                  = "${params.genomes_base}/GATK/GRCh37/Annotation/GATKBundle/dbsnp_138.b37.vcf"
      dbsnpIndex             = "${params.genomes_base}/GATK/GRCh37/Annotation/GATKBundle/dbsnp_138.b37.vcf.idx"
      dict                   = "${params.genomes_base}/GATK/GRCh37/Sequence/WholeGenomeFasta/human_g1k_v37_decoy.dict"
      fasta                  = "${params.genomes_base}/GATK/GRCh37/Sequence/WholeGenomeFasta/human_g1k_v37_decoy.fasta"
      fastaFai               = "${params.genomes_base}/GATK/GRCh37/Sequence/WholeGenomeFasta/human_g1k_v37_decoy.fasta.fai"
      germlineResource       = "${params.genomes_base}/GATK/GRCh37/Annotation/GermlineResource/gnomAD.r2.1.1.GRCh37.PASS.AC.AF.only.vcf.gz"
      germlineResourceIndex  = "${params.genomes_base}/GATK/GRCh37/Annotation/GermlineResource/gnomAD.r2.1.1.GRCh37.PASS.AC.AF.only.vcf.gz.tbi"
      intervals              = "${params.genomes_base}/GATK/GRCh37/Annotation/intervals/wgs_calling_regions_Sarek.list"
      knownIndels            = "${params.genomes_base}/GATK/GRCh37/Annotation/GATKBundle/{1000G_phase1,Mills_and_1000G_gold_standard}.indels.b37.vcf"
      knownIndelsIndex       = "${params.genomes_base}/GATK/GRCh37/Annotation/GATKBundle/{1000G_phase1,Mills_and_1000G_gold_standard}.indels.b37.vcf.idx"
      snpeffDb               = "GRCh37.75"
      vepCacheVersion        = "95"
    }


    'GRCh38' {
      acLoci                 = "${params.genomes_base}/GATK/GRCh38/Annotation/ASCAT/1000G_phase3_GRCh38_maf0.3.loci"
      acLociGC               = "${params.genomes_base}/GATK/GRCh38/Annotation/ASCAT/1000G_phase3_GRCh38_maf0.3.loci.gc"
      bwaIndex               = "${params.genomes_base}/GATK/GRCh38/Sequence/BWAIndex/Homo_sapiens_assembly38.fasta.64.{alt,amb,ann,bwt,pac,sa}"
      chrDir                 = "${params.genomes_base}/GATK/GRCh38/Sequence/Chromosomes"
      chrLength              = "${params.genomes_base}/GATK/GRCh38/Sequence/Length/Homo_sapiens_assembly38.len"
      dbsnp                  = "${params.genomes_base}/GATK/GRCh38/Annotation/GATKBundle/dbsnp_146.hg38.vcf.gz"
      dbsnpIndex             = "${params.genomes_base}/GATK/GRCh38/Annotation/GATKBundle/dbsnp_146.hg38.vcf.gz.tbi"
      dict                   = "${params.genomes_base}/GATK/GRCh38/Sequence/WholeGenomeFasta/Homo_sapiens_assembly38.dict"
      fasta                  = "${params.genomes_base}/GATK/GRCh38/Sequence/WholeGenomeFasta/Homo_sapiens_assembly38.fasta"
      fastaFai               = "${params.genomes_base}/GATK/GRCh38/Sequence/WholeGenomeFasta/Homo_sapiens_assembly38.fasta.fai"
      germlineResource       = "${params.genomes_base}/GATK/GRCh38/Annotation/GermlineResource/gnomAD.r2.1.1.GRCh38.PASS.AC.AF.only.vcf.gz"
      germlineResourceIndex  = "${params.genomes_base}/GATK/GRCh38/Annotation/GermlineResource/gnomAD.r2.1.1.GRCh38.PASS.AC.AF.only.vcf.gz.tbi"
      intervals              = "${params.genomes_base}/GATK/GRCh38/Annotation/intervals/wgs_calling_regions.hg38.bed"
      knownIndels            = "${params.genomes_base}/GATK/GRCh38/Annotation/GATKBundle/{Mills_and_1000G_gold_standard.indels.hg38,beta/Homo_sapiens_assembly38.known_indels}.vcf.gz"
      knownIndelsIndex       = "${params.genomes_base}/GATK/GRCh38/Annotation/GATKBundle/{Mills_and_1000G_gold_standard.indels.hg38,beta/Homo_sapiens_assembly38.known_indels}.vcf.gz.tbi"
      snpeffDb               = "GRCh38.86"
      vepCacheVersion        = "95"
      axiomPoly              = "Missing"
      axiomPolyIndex         = "Missing"
      hapmap                 = "${params.genomes_base}/GATK/GRCh38/Annotation/GATKBundle/hapmap_3.3.hg38.vcf.gz"
      hapmapIndex            = "${params.genomes_base}/GATK/GRCh38/Annotation/GATKBundle/hapmap_3.3.hg38.vcf.gz.tbi"
      omni                   = "${params.genomes_base}/GATK/GRCh38/Annotation/GATKBundle/1000G_omni2.5.hg38.vcf.gz"
      omniIndex              = "${params.genomes_base}/GATK/GRCh38/Annotation/GATKBundle/1000G_omni2.5.hg38.vcf.gz.tbi"
      onekg                  = "${params.genomes_base}/GATK/GRCh38/Annotation/GATKBundle/1000G_phase1.snps.high_confidence.hg38.vcf.gz"
      onekgIndex             = "${params.genomes_base}/GATK/GRCh38/Annotation/GATKBundle/1000G_phase1.snps.high_confidence.hg38.vcf.gz.tbi"
      mills                  = "${params.genomes_base}/GATK/GRCh38/Annotation/GATKBundle/Mills_and_1000G_gold_standard.indels.hg38.vcf.gz"
      millsIndex             = "${params.genomes_base}/GATK/GRCh38/Annotation/GATKBundle/Mills_and_1000G_gold_standard.indels.hg38.vcf.gz.tbi" 

    }

    'smallGRCh37' {
      acLoci                = "${params.genomes_base}/1000G_phase3_20130502_SNP_maf0.3.small.loci"
      acLociGC              = "${params.genomes_base}/1000G_phase3_20130502_SNP_maf0.3.small.loci.gc"
      dbsnp                 = "${params.genomes_base}/dbsnp_138.b37.small.vcf.gz"
      fasta                 = "${params.genomes_base}/human_g1k_v37_decoy.small.fasta"
      germlineResource      = "${params.genomes_base}/dbsnp_138.b37.small.vcf.gz"
      intervals             = "${params.genomes_base}/small.intervals"
      knownIndels           = ["${params.genomes_base}/1000G_phase1.indels.b37.small.vcf.gz", "${params.genomes_base}/Mills_and_1000G_gold_standard.indels.b37.small.vcf.gz"]
      snpeffDb              = "GRCh37.75"
      vepCacheVersion       = "95"
    }
  }
}
